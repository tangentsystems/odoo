<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="dialog_history_form" model="ir.ui.view">
        <field name="name">dialog.history.form</field>
        <field name="model">dialog.history</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="user_id"/>
                    <field name="channel_id"/>
                    <field name="parameters"/>
                    <separator string="Request"/>
                    <field name="request"/>
                    <field name="request_raw" widget="ace"/>
                    <separator string="Response"/>
                    <field name="response"/>
                    <field name="response_raw" widget="ace"/>
                </group>
            </form>
        </field>
    </record>

    <record id="dialog_history_tree" model="ir.ui.view">
        <field name="name">dialog.history.tree</field>
        <field name="model">dialog.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id"/>
                <field name="request"/>
                <field name="response_raw"/>
            </tree>
        </field>
    </record>

    <record id="dialog_history_action" model="ir.actions.act_window">
        <field name="name">Histories</field>
        <field name="res_model">dialog.history</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="dialog_history_tree"/>
    </record>

</odoo>
