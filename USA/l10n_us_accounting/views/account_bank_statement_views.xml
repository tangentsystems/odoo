<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TREE VIEW -->
    <record id="view_bank_statement_inherit_tree" model="ir.ui.view">
        <field name="name">view_bank_statement_inherit_tree</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_tree"/>
        <field name="arch" type="xml">
            <field name="balance_end" position="attributes">
                <attribute name="invisible">0</attribute>
            </field>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_bank_statement_inherit_form" model="ir.ui.view">
        <field name="name">view_bank_statement_inherit_form</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form"/>
        <field name="arch" type="xml">
            <header position="attributes">
                <attribute name="invisible">True</attribute>
            </header>
            <xpath expr="//tree//field[@name='amount']" position="attributes">
                <attribute name="sum">Total</attribute>
            </xpath>
        </field>
    </record>

    <record id="bank_statement_cancel_form_inherit" model="ir.ui.view">
        <field name="name">bank_statement_cancel_form_inherit</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account_cancel.bank_statement_cancel_form_inherit"/>
        <field name="arch" type="xml">
            <button name="button_cancel_reconciliation" position="attributes">
                <attribute name="attrs">{'invisible': 1}</attribute>
            </button>
        </field>
    </record>
</odoo>
