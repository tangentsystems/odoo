<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_journal_form_inherit_usa" model="ir.ui.view">
        <field name="name">account.journal.form.usa</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='refund_sequence_id']/.." position="after">
                <label for="write_off_sequence_number_next" attrs="{'invisible': [('type', 'not in', ['sale', 'purchase'])]}"/>
                <div attrs="{'invisible': [('type', 'not in', ['sale', 'purchase'])]}">
                    <field name="write_off_sequence_number_next" style="padding-right: 1.0em"/>
                    <field name="write_off_sequence_id" required="0" readonly="1" groups="base.group_no_one"/>
                </div>
            </xpath>

            <field name="type" position="after">
                <field name="is_credit_card"
                       attrs="{'invisible': [('type', '!=', 'bank')]}"/>
                <field name="partner_id" domain="[('supplier', '=', True)]" context="{'default_supplier': True, 'default_customer': False, 'default_company_type': 'company'}"
                      attrs="{'invisible': [('is_credit_card', '=', False)], 'required': [('is_credit_card', '=', True)]}"/>
            </field>
        </field>
    </record>

    <record id="view_account_bank_journal_form_usa" model="ir.ui.view">
        <field name="name">account.bank.journal.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_bank_journal_form"/>
        <field name="arch" type="xml">
            <field name="bank_id" position="after">
                <field name="is_credit_card" />
                <field name="partner_id" domain="[('supplier', '=', True)]" context="{'default_supplier': True, 'default_customer': False, 'default_company_type': 'company'}"
                      attrs="{'invisible': [('is_credit_card', '=', False)], 'required': [('is_credit_card', '=', True)]}"/>
            </field>
        </field>
    </record>

    <!-- Rename Reconciliation Models action to Bank Rules -->
    <record id="account.action_account_reconcile_model" model="ir.actions.act_window">
        <field name="name">Bank Rules</field>
    </record>

    <!-- Customize account reconcile model form to bank rules form -->
    <record id="view_account_reconcile_model_form_usa" model="ir.ui.view">
        <field name="name">account.reconcile.model.form.usa</field>
        <field name="model">account.reconcile.model</field>
        <field name="inherit_id" ref="account.view_account_reconcile_model_form"/>
        <field name="arch" type="xml">
            <field name="name" position="attributes">
                <attribute name="placeholder">New Rule</attribute>
            </field>
            <xpath expr="//field[@name='rule_type']/../.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='match_partner']/.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <field name="account_id" position="before">
                <field name="internal_transfer"/>
                <field name="account_id_transfer" attrs="{'invisible': [('internal_transfer', '=', False)]}"/>
            </field>
            <field name="account_id" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('has_second_line', '=', True), ('internal_transfer', '=', True)]}</attribute>
            </field>
            <field name="analytic_account_id" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('has_second_line', '=', True), ('internal_transfer', '=', True)]}</attribute>
            </field>
            <field name="analytic_tag_ids" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('has_second_line', '=', True), ('internal_transfer', '=', True)]}</attribute>
            </field>

            <field name="label" position="after">
                <field name="payee" attrs="{'invisible': [('internal_transfer', '=', True)]}"/>
            </field>

            <!-- Hide some fields -->
            <field name="amount_type" position="attributes">
                <attribute name="attrs">{'invisible': [('has_second_line', '!=', True)], 'required': [('has_second_line', '=', True)]}</attribute>
            </field>
            <field name="tax_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <xpath expr="//field[@name='amount']/../../label" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='amount']/.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <field name="journal_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <!-- Rename add second line to split transaction -->
            <xpath expr="//div[hasclass('oe_edit_only')]/label" position="attributes">
                <attribute name="string">Split</attribute>
            </xpath>
            <xpath expr="//div[hasclass('oe_edit_only')]" position="attributes">
                <attribute name="attrs">{'invisible': [('internal_transfer', '=', True)]}</attribute>
            </xpath>

            <!-- Add new tag to display split transaction -->
            <xpath expr="//field[@name='second_account_id']/../.." position="after">
                <div attrs="{'invisible': ['|', ('has_second_line', '!=', True), ('internal_transfer', '=', True)]}">
                    <br/>
                    <field name="line_ids" nolabel="1" widget="one2many_list" mode="tree">
                        <tree editable="bottom">
                            <field name="account_id"/>
                            <field name="analytic_account_id" groups="analytic.group_analytic_accounting" domain="[('company_id', '=', parent.company_id)]" context="{'default_partner_id': parent.payee}"/>
                            <field name="analytic_tag_ids" widget="many2many_tags" groups="analytic.group_analytic_tags"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount" attrs="{'required': [('parent.amount_type', '=', 'fixed')], 'column_invisible': [('parent.amount_type', '!=', 'fixed')]}"/>
                            <field name="amount_percentage" attrs="{'required': [('parent.amount_type', '=', 'percentage')], 'column_invisible': [('parent.amount_type', '=', 'fixed')]}"/>
                        </tree>
                    </field>
                </div>
            </xpath>

            <!--&lt;!&ndash; Hide Line tag &ndash;&gt;-->
            <xpath expr="//field[@name='second_account_id']/../.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='second_account_id']" position="attributes">
                <attribute name="attrs"/>
            </xpath>
        </field>
    </record>

    <!-- Add For Review form view -->
    <record id="view_form_for_review_usa" model="ir.ui.view">
        <field name="name">account.bank.statement.line.form.usa</field>
        <field name="model">account.bank.statement.line</field>
        <field name="arch" type="xml">
            <form string="Review Item" create="false" delete="false">
                <header>
                    <field name="status" invisible="1"/>
                    <button name="action_apply_item" type="object" string="Apply" class="oe_highlight"
                        attrs="{'invisible': [('status', '!=', 'open')]}"/>
                    <button name="action_undo_reviewed_item" type="object" string="Undo" class="oe_highlight"
                            attrs="{'invisible': [('status', '!=', 'confirm')]}"
                            confirm="Do you want to undo action applied on this bank statement line?"/>
                    <button name="action_undo_excluded_item" type="object" string="Undo" class="oe_highlight"
                            attrs="{'invisible': [('status', '!=', 'ignore')]}"
                            confirm="Do you want to undo action applied on this bank statement line?"/>
                </header>
                <sheet string="Review Item">
                    <group>
                        <group>
                            <field name="action_type" widget="radio" attrs="{'readonly': [('status', '!=', 'open')]}"/>
                            <!-- Input info of Add and Transfer -->
                            <field name="account_id" string="Account"
                                   attrs="{'required': [('action_type', '=', 'add'), ('split_transaction', '=', False), ('status', '=', 'open')],
                                   'invisible': ['|', ('action_type', 'in', ('match', 'transfer')), '&amp;', ('action_type', '=', 'add'), ('split_transaction', '=', True)],
                                    'readonly': [('status', '!=', 'open')]}"/>
                            <field name="analytic_account_id" groups="analytic.group_analytic_accounting"
                                   attrs="{'invisible': ['|', ('action_type', 'in', ('match', 'transfer')),
                                   '&amp;', ('action_type', '=', 'add'), ('split_transaction', '=', True)],
                                    'readonly': [('status', '!=', 'open')]}"/>
                            <field name="analytic_tag_ids" widget="many2many_tags" groups="analytic.group_analytic_tags"
                                   attrs="{'invisible': ['|', ('action_type', 'in', ('match', 'transfer')),
                                   '&amp;', ('action_type', '=', 'add'), ('split_transaction', '=', True)],
                                    'readonly': [('status', '!=', 'open')]}"/>
                            <field name="account_id_transfer" string="Account"
                                   attrs="{'required': [('action_type', '=', 'transfer')],
                                   'invisible': [('action_type', '!=', 'transfer')],
                                    'readonly': [('status', '!=', 'open')]}"/>
                            <field name="partner_id" string="Payee"
                                   attrs="{'invisible': [('action_type', '!=', 'add')],
                                   'readonly': [('status', '!=', 'open')]}"/>
                        </group>
                        <group>
                            <field name="transaction_type"/>
                            <field name="journal_currency_id" invisible="1"/>
                            <field name="amount_unsigned"/>
                            <field name="memo" attrs="{'readonly': [('status', '!=', 'open')]}"/>
                            <field name="account_voucher_id" string="Added Transaction" readonly="1"
                                   context="{'form_view_ref': 'account_voucher.view_sale_receipt_form'}"
                                   attrs="{'invisible': ['|', ('status', '!=', 'confirm'), '|', ('account_voucher_id', '=', False), ('transaction_type', '=', 'amount_paid')]}"/>
                            <field name="account_voucher_purchase_id" string="Added Transaction" readonly="1"
                                   context="{'form_view_ref': 'account_voucher.view_purchase_receipt_form'}"
                                   attrs="{'invisible': ['|', ('status', '!=', 'confirm'), '|', ('account_voucher_id', '=', False), ('transaction_type', '=', 'amount_received')]}"/>
                            <field name="account_payment_id" string="Added Transaction" readonly="1"
                                   attrs="{'invisible': ['|', ('status', '!=', 'confirm'), ('account_payment_id', '=', False)]}"/>
                        </group>
                    </group>
                    <div>
                        <field name="split_transaction" string="Split"
                               attrs="{'invisible': [('action_type', '!=', 'add')], 'readonly': [('status', '!=', 'open')]}"/>
                        <label for="split_transaction" attrs="{'invisible': [('action_type', '!=', 'add')]}"/>
                    </div>
                    <separator/>

                    <field name="company_id" invisible="1" />
                    <!-- Input info of Add - Split transaction -->
                    <div attrs="{'invisible': ['|', ('action_type', '!=', 'add'), ('split_transaction', '=', False)]}">
                        <field name="line_ids" nolabel="1" widget="one2many_list" mode="tree"
                            attrs="{'readonly': [('status', '!=', 'open')]}">
                            <tree editable="bottom">
                                <field name="account_id" attrs="{'required': [('parent.action_type', '=', 'add'), ('parent.split_transaction', '=', True)]}"/>
                                <field name="analytic_account_id" groups="analytic.group_analytic_accounting"
                                       domain="[('company_id', '=', parent.company_id)]" context="{'default_partner_id': parent.partner_id}"/>
                                <field name="analytic_tag_ids" widget="many2many_tags" groups="analytic.group_analytic_tags"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="journal_currency_id" invisible="1"/>
                            <field name="amount_unsigned" string="Original Amount"/>
                            <field name="total_split_amount" string="Split Amount"/>
                            <field name="difference" class="oe_subtotal_footer_separator"/>
                        </group>
                    </div>
                    <group attrs="{'invisible': ['|', ('bank_rule_apply', '=', False), ('action_type', '=', 'match')]}">
                        <field name="bank_rule_apply" class="oe_inline" options="{'no_open': True}"/>
                    </group>
                    <!-- Input info of Match -->
                    <notebook attrs="{'invisible': [('action_type', '!=', 'match')]}">
                        <page string="Possible Match">
                            <field name="mapping_transaction_ids" nolabel="1" widget="one2many_list" mode="tree"
                                   attrs="{'readonly': [('status', '!=', 'open')]}">
                                <tree string="Possible Match" create="0" edit="0" delete="0">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="journal_currency_id" invisible="1"/>
                                    <field name="total_amount"/>
                                </tree>
                            </field>
                            <button id="account_find_candidate_transactions_matching"
                                    name="find_other_matching_transaction" type="object"
                                    string="Find other matching transactions" class="btn-link"
                                    attrs="{'invisible': [('status', '!=', 'open')]}"
                                    context="{'action_id': 'l10n_us_accounting.action_account_find_other_matching_usa'}"/>
                            <field name="add_transaction" invisible="1"/>
                            <group attrs="{'invisible': [('status', '!=', 'open')]}">
                                <group attrs="{'invisible': [('add_transaction', '=', False)]}">
                                    <separator string="New Transaction"/>
                                    <newline/>
                                    <field name="new_date" string="Date" readonly="1"/>
                                    <field name="new_partner_id" readonly="1"/>
                                    <field name="new_account_id" readonly="1"/>
                                    <field name="new_memo" readonly="1"/>
                                    <field name="new_amount" readonly="1"/>
                                </group>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="journal_currency_id" invisible="1"/>
                                    <field name="amount_unsigned" string="Downloaded transaction"/>
                                    <field name="payment"/>
                                    <field name="new_amount" string="New Transaction" attrs="{'invisible': [('add_transaction', '=', False)]}"/>
                                    <field name="difference" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                            <group>
                                <field name="bank_rule_apply" class="oe_inline" options="{'no_open': True}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                 <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Add For Review list view -->
    <record id="view_tree_for_review_usa" model="ir.ui.view">
        <field name="name">account.bank.statement.line.tree.usa</field>
        <field name="model">account.bank.statement.line</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false">
                <field name="date"/>
                <field name="name"/>
                <field name="partner_id" string="Payee"/>
                <field name="split_transaction" invisible="1"/>
                <field name="account_id" string="Account"
                       attrs="{'invisible': ['|', ('action_type', '=', 'match'), '&amp;', ('action_type', '=', 'add'), ('split_transaction', '=', True)]}"/>
                <field name="bank_rule_apply"/>
                <field name="possible_match"/>
                <field name="currency_id" invisible="1"/>
                <field name="sent" sum="Sent" attrs="{'invisible': [('sent', '=', 0)]}"/>
                <field name="received" sum="Received" attrs="{'invisible': [('received', '=', 0)]}"/>
                <field name="action_type"/>
                <button type="object" name="action_apply_item" string="Apply" class="btn-link"/>
            </tree>
        </field>
    </record>

    <!-- Add Filter of For Review list -->
    <record id="account_bank_statement_line_view_search_filter_usa" model="ir.ui.view">
        <field name="name">account.bank.statement.line.for.review.search.filter.usa</field>
        <field name="model">account.bank.statement.line</field>
        <field name="arch" type="xml">
            <search string="Search Account Bank Statement Line">
                <!-- Search Area -->
                <field name="name"/>
                <field name="partner_id" string="Payee" operator="child_of"/>
                <field name="account_id" string="Account"/>
                <field name="sent" string="Amount" filter_domain="['|', ('sent', '=', self), ('received', '=', self)]"/>

                <!-- Filter Area -->
                <filter name="sent" string="Send Money" domain="[('sent', '>', 0)]"/>
                <filter name="received" string="Receive Money" domain="[('received', '>', 0)]"/>
                <separator/>

                <filter name="action_type" string="Add Type" domain="[('action_type', '=', 'add')]"/>
                <filter name="action_type" string="Match Type" domain="[('action_type', '=', 'match')]"/>
                <filter name="action_type" string="Transfer Type" domain="[('action_type', '=', 'transfer')]"/>
                <separator/>

                <group expand="0" string="Group By">
                    <filter name="group_by_date" string="Date" context="{'group_by':'date'}"/>
                    <filter name="group_by_payee" string="Payee" context="{'group_by':'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Add For Review action tree -->
    <record id="action_for_review_usa" model="ir.actions.act_window">
        <field name="name">Review Items</field>
        <field name="res_model">account.bank.statement.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('view_tree_for_review_usa')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('view_form_for_review_usa')})]"/>
        <field name="domain">[('status', '=', 'open')]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="account_bank_statement_line_view_search_filter_usa"/>
    </record>

    <!-- REVIEWED bank statement line -->
    <record id="view_tree_reviewed_bsl_usa" model="ir.ui.view">
        <field name="name">account.bank.statement.line.reviewed.tree.usa</field>
        <field name="model">account.bank.statement.line</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false">
                <field name="date"/>
                <field name="name"/>
                <field name="journal_currency_id" invisible="1"/>
                <field name="sent" attrs="{'invisible': [('sent', '=', 0)]}"/>
                <field name="received" attrs="{'invisible': [('received', '=', 0)]}"/>
                <field name="added_or_matched_description" string="Added or Matched"/>
                <button type="object" name="action_undo_reviewed_item" string="Undo" class="btn-link"/>
            </tree>
        </field>
    </record>

    <!-- Action reviewed items -->
    <record id="action_reviewed_items" model="ir.actions.act_window">
        <field name="name">Reviewed Items</field>
        <field name="res_model">account.bank.statement.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('view_tree_reviewed_bsl_usa')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('view_form_for_review_usa')})]"/>
        <field name="domain">[('status', '=', 'confirm')]</field>
        <field name="context">{}</field>
    </record>

    <!-- Excluded bank statement line tree -->
    <record id="excluded_account_bank_statement_line_view_tree_usa" model="ir.ui.view">
        <field name="name">account.bank.statement.line.excluded.tree.usa</field>
        <field name="model">account.bank.statement.line</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" delete="false">
                <field name="date"/>
                <field name="name"/>
                <field name="journal_currency_id" invisible="1"/>
                <field name="sent" attrs="{'invisible': [('sent', '=', 0)]}"/>
                <field name="received" attrs="{'invisible': [('received', '=', 0)]}"/>
                <button type="object" name="action_undo_excluded_item" string="Undo" class="btn-link"/>
            </tree>
        </field>
    </record>

    <!-- Action exclude items -->
    <record id="action_excluded_items" model="ir.actions.act_window">
        <field name="name">Excluded Items</field>
        <field name="res_model">account.bank.statement.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('excluded_account_bank_statement_line_view_tree_usa')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('view_form_for_review_usa')})]"/>
        <field name="domain">[('status', '=', 'ignore')]</field>
        <field name="context">{}</field>
    </record>

    <!--Options in Action in Bank Statement Line-->
    <record model="ir.actions.server" id="action_bank_statement_line_apply_selected">
        <field name="name">Apply Selected</field>
        <field name="model_id" ref="account.model_account_bank_statement_line"/>
        <field name="state">code</field>
        <field name="code">records.action_apply_item()</field>
        <field name="binding_model_id" ref="account.model_account_bank_statement_line"/>
    </record>

    <!-- Options Exclude Selected in Action in Bank Statement Line -->
    <record model="ir.actions.server" id="action_bank_statement_line_exclude_selected">
        <field name="name">Exclude Selected</field>
        <field name="model_id" ref="account.model_account_bank_statement_line"/>
        <field name="state">code</field>
        <field name="code">records.action_exclude_item()</field>
        <field name="binding_model_id" ref="account.model_account_bank_statement_line"/>
    </record>

    <!-- Options Undo Selected in Action in Bank Statement Line -->
    <record model="ir.actions.server" id="action_bank_statement_line_undo_selected">
        <field name="name">Undo</field>
        <field name="model_id" ref="account.model_account_bank_statement_line"/>
        <field name="state">code</field>
        <field name="code">records.action_undo_items()</field>
        <field name="binding_model_id" ref="account.model_account_bank_statement_line"/>
    </record>

    <!-- Hide some menus -->
    <menuitem id="account.menu_action_manual_reconciliation" active="False"/>
    <menuitem id="account.action_account_reconcile_model_menu" active="False"/>
</odoo>
