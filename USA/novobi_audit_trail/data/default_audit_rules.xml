<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!--Tracking changes in Journal Entries-->
        <record id="audit_rule_track_journal_entries" model="audit.trail.rule">
            <field name="name">Track changes in Manual Journal Entries</field>
            <field name="model_id" ref="account.model_account_move"></field>
            <field name="is_track_create">True</field>
            <field name="is_track_write">True</field>
            <field name="is_track_unlink">True</field>
            <field name="is_tracking_all_fields">False</field>
            <field name="state">confirmed</field>
            <field name="tracking_field_ids"
                   eval="[(6,0,
                   [ref('account.field_account_move__ref'),
                   ref('account.field_account_move__state'),
                   ref('account.field_account_move__name')
                   ])]"></field>
        </record>

        <record id="audit_rule_track_journal_items" model="audit.trail.rule">
            <field name="name">Track changes in Journal Items</field>
            <field name="model_id" ref="account.model_account_move_line"></field>
            <field name="is_track_create">True</field>
            <field name="is_track_write">True</field>
            <field name="is_track_unlink">True</field>
            <field name="is_tracking_all_fields">False</field>
            <field name="parent_field_id" ref="account.field_account_move_line__move_id"/>
            <field name="state">confirmed</field>
            <field name="tracking_field_ids"
                   eval="[(6,0,
                   [ref('account.field_account_move_line__account_id'),
                   ref('account.field_account_move_line__partner_id'),
                   ref('account.field_account_move_line__date'),
                   ref('account.field_account_move_line__debit'),
                   ref('account.field_account_move_line__credit'),
                   ref('account.field_account_move_line__name'),
                   ref('account.field_account_move_line__analytic_account_id'),
                   ref('account.field_account_move_line__analytic_tag_ids')
                   ])]"></field>
        </record>

        <!--Tracking changes in Payments-->
        <record id="audit_rule_track_payments" model="audit.trail.rule">
            <field name="name">Track changes in Payments</field>
            <field name="model_id" ref="account.model_account_payment"></field>
            <field name="is_track_create">True</field>
            <field name="is_track_write">True</field>
            <field name="is_track_unlink">True</field>
            <field name="is_tracking_all_fields">False</field>
            <field name="state">confirmed</field>
            <field name="tracking_field_ids"
                   eval="[(6,0,
                   [ref('account.field_account_payment__payment_method_id'),
                   ref('account.field_account_payment__journal_id'),
                   ref('account.field_account_payment__payment_date'),
                   ref('account.field_account_payment__partner_id'),
                   ref('account.field_account_payment__currency_id'),
                   ref('account.field_account_payment__communication'),
                   ref('account.field_account_payment__state'),
                   ref('account.field_account_payment__amount'),
                   ref('account.field_account_payment__name'),
                   ref('account.field_account_payment__move_name'),
                   ref('l10n_us_accounting.field_account_payment__open_invoice_ids'),
                   ref('l10n_us_accounting.field_account_payment__check_number_text'),
                   ])]"></field>
        </record>

        <!--Tracking changes in Invoices-->
        <record id="audit_rule_track_invoices" model="audit.trail.rule">
            <field name="name">Track changes in Invoices</field>
            <field name="model_id" ref="account.model_account_invoice"></field>
            <field name="is_track_create">True</field>
            <field name="is_track_write">True</field>
            <field name="is_track_unlink">True</field>
            <field name="is_tracking_all_fields">False</field>
            <field name="state">confirmed</field>
            <field name="tracking_field_ids"
                   eval="[(6,0,
                   [ref('account.field_account_invoice__reference'),
                   ref('account.field_account_invoice__partner_id'),
                   ref('account.field_account_invoice__amount_total'),
                   ref('account.field_account_invoice__date_invoice'),
                   ref('account.field_account_invoice__date_due'),
                   ref('account.field_account_invoice__user_id'),
                   ref('account.field_account_invoice__payment_term_id'),
                   ref('sale.field_account_invoice__team_id'),
                   ref('account.field_account_invoice__state'),
                   ref('account.field_account_invoice__number')
                   ])]"></field>
        </record>

        <record id="audit_rule_track_invoice_lines" model="audit.trail.rule">
            <field name="name">Track changes in Invoice Lines</field>
            <field name="model_id" ref="account.model_account_invoice_line"></field>
            <field name="is_track_create">True</field>
            <field name="is_track_write">True</field>
            <field name="is_track_unlink">True</field>
            <field name="is_tracking_all_fields">False</field>
            <field name="parent_field_id" ref="account.field_account_invoice_line__invoice_id"/>
            <field name="state">confirmed</field>
            <field name="tracking_field_ids"
                   eval="[(6,0,
                   [ref('account.field_account_invoice_line__account_analytic_id'),
                   ref('account.field_account_invoice_line__product_id'),
                   ref('account.field_account_invoice_line__quantity'),
                   ref('account.field_account_invoice_line__account_id'),
                   ref('account.field_account_invoice_line__analytic_tag_ids')
                   ])]"></field>
        </record>

        <!--Tracking changes in Receipts-->
        <record id="audit_rule_track_receipts" model="audit.trail.rule">
            <field name="name">Track changes in Receipts</field>
            <field name="model_id" ref="account_voucher.model_account_voucher"></field>
            <field name="is_track_create">True</field>
            <field name="is_track_write">True</field>
            <field name="is_track_unlink">True</field>
            <field name="is_tracking_all_fields">True</field>
            <field name="state">confirmed</field>
        </record>

        <record id="audit_rule_track_receipt_lines" model="audit.trail.rule">
            <field name="name">Track changes in Receipt Lines</field>
            <field name="model_id" ref="account_voucher.model_account_voucher_line"></field>
            <field name="is_track_create">True</field>
            <field name="is_track_write">True</field>
            <field name="is_track_unlink">True</field>
            <field name="is_tracking_all_fields">True</field>
            <field name="parent_field_id" ref="account_voucher.field_account_voucher_line__voucher_id"/>
            <field name="state">confirmed</field>
        </record>
    </data>
</odoo>