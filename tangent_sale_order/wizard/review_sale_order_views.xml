<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_review_orders" model="ir.ui.view">
        <field name="name">Review Orders</field>
        <field name="model">review.sale.order</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="state" required="1"/>
                </group>

                <group>
                    <notebook>
                      <page string="Sales Orders">
                          <field name="sale_ids" readonly="1"/>
                      </page>
                    </notebook>
                </group>
                <footer>
                    <button name="action_confirm" string="Ok" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_review_orders" model="ir.actions.act_window">
        <field name="name">Review Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">review.sale.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="groups_id" eval="[(4,ref('sales_team.group_sale_manager'))]"/>
        <!-- TODO: check if we need this -->
        <field name="binding_model_id" ref="sale.model_sale_order" />
    </record>
</odoo>