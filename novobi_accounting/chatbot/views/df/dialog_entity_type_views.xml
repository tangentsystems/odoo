<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="dialog_entity_type_form" model="ir.ui.view">
        <field name="name">dialog.entity.type.form</field>
        <field name="model">dialog.entity.type</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="dfid"/>
                    <field name="name"/>
                    <field name="kind"/>
                    <field name="entity_ids" mode="tree">
                        <tree editable="top">
                            <field name="value"/>
                            <field name="synonyms"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="dialog_entity_type_tree" model="ir.ui.view">
        <field name="name">dialog.entity.type.tree</field>
        <field name="model">dialog.entity.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="dfid"/>
                <field name="name"/>
                <field name="kind"/>
            </tree>
        </field>
    </record>

    <record id="dialog_entity_type_action" model="ir.actions.act_window">
        <field name="name">Entity Types</field>
        <field name="res_model">dialog.entity.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="dialog_entity_type_tree"/>
    </record>

    <!-- Server action -->
    <record id="dialog_entity_type_action_server" model="ir.actions.server">
        <field name="name">Get entity types</field>
        <field name="model_id" ref="chatbot.model_dialog_entity_type"/>
        <field name="state">code</field>
        <field name="code">
            model.get_list_df_entity_type()
        </field>
        <field name="binding_model_id" ref="chatbot.model_dialog_entity_type"/>
    </record>

</odoo>
