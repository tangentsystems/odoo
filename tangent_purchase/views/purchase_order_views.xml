<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--FORM VIEW-->
    <record id="view_purchase_order_inherit_form" model="ir.ui.view">
        <field name="name">view_purchase_order_inherit_form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="action_rfq_send" position="before">
                <button name="action_receive_service_products" states="purchase,done" class="oe_highlight"
                    string="Receive Service Products" type="object" />
            </button>
        </field>
    </record>

    <!--Popup view-->
    <record id="view_service_purchase_order_line_form" model="ir.ui.view">
        <field name="name">view_service_purchase_order_line_form</field>
        <field name="model">purchase.order</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <p class="oe_grey">You can either update received quantity for each line and click "Save", or click "Receive All".</p>

                    <field name="state" invisible="1"/>
                    <notebook>
                        <page string="Service Products">
                            <field name="service_order_line_ids">
                                 <tree string="Purchase Order Lines" editable="bottom" create="0" delete="0">
                                    <field name="currency_id" invisible="1"/>
                                    <field name="state" invisible="1"/>
                                    <field name="product_type" invisible="1"/>
                                    <field name="invoice_lines" invisible="1"/>
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" readonly="1"/>
                                    <field name="name" readonly="1"/>
                                    <field name="product_qty" readonly="1"/>
                                    <field name="qty_received"/>
                                    <field name="qty_invoiced"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="button_receive_all" type="object" string="Receive All" class="btn-primary"/>
                    <button name="button_receive_manual" type="object" string="Save" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
