<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="state" position="attributes">
                <attribute name="statusbar_visible">draft_quote,draft,ready_quote,sent,sale</attribute>
            </field>

            <button name="action_confirm" position="after">
                <button name="action_review_draft" id="action_review_draft"
                        string="Reviewed" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', 'not in', ['draft_quote'])]}"/>
                <button name="action_por" id="action_por"
                        string="Submit POR" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', 'not in', ['draft_quote', 'draft'])]}"/>
                <button name="action_draft" states="draft" type="object" string="Reset to Draft"/>
            </button>

            <!--Primary Buttons-->
            <xpath expr="//button[@name='action_quotation_send'][1]" position="attributes">
                <attribute name="states">ready_quote</attribute>
            </xpath>
            <!--<xpath expr="//button[@name='print_quotation'][1]" position="attributes">-->
                <!--<attribute name="states">draft_quote,draft,ready_quote</attribute>-->
            <!--</xpath>-->
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'not in', ['ready_quote'])]}</attribute>
            </xpath>

            <button name="action_cancel" position="attributes">
                <attribute name="states">draft_quote,draft,ready_quote,sent,sale</attribute>
            </button>
        </field>
    </record>
</odoo>