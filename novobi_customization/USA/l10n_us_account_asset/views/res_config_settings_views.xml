<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_usa_asset" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.usa.asset</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account_accountant.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="msg_account_asset" position="after">
                <div attrs="{'invisible': [('module_account_asset', '=', False)]}">
                    <label for="asset_threshold"/>
                    <div class="text-muted">
                        Able to create Assets when bill line's total amount is greater than or equal to asset threshold.
                        <field name="asset_threshold"/>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
