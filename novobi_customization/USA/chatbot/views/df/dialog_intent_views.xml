<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="dialog_intent_form" model="ir.ui.view">
        <field name="name">dialog.intent.form</field>
        <field name="model">dialog.intent</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="button_update_intent" type="object" class="oe_stat_button" icon="fa-arrow-up" string="Push" confirm="Do you want to push this intent to Dialogflow?"/>
                        <button name="button_delete_intent" type="object" class="oe_stat_button" icon="fa-trash" string="Delete" confirm="Do you want to delete this intent on Dialogflow?"/>
                    </div>
                    <group>
                        <field name="dfid"/>
                        <field name="name"/>
                    </group>

                    <!-- Training phrases -->
                    <!-- TODO: Create new view for phrase -->
                    <separator string="Training phrases"/>
                    <field name="training_phrase_ids" mode="tree">
                        <tree>
                            <field name="full_text"/>
                        </tree>
                        <form>
                            <group>
                                <field name="full_text"/>
                            </group>
                            <separator string="Parameters"/>
                            <field name="parameter_ids" mode="tree">
                                <tree editable="bottom">
                                    <field name="name" string="Name"/>
                                    <field name="value"/>
                                    <field name="entity_type_display_name"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="value"/>
                                        <field name="entity_type_display_name"/>
                                    </group>
                                </form>
                            </field>
                            <separator string="Parts"/>
                            <field name="training_part_ids" mode="tree">
                                <tree editable="bottom">
                                    <field name="text"/>
                                    <field name="alias"/>
                                    <field name="entity_type"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="text"/>
                                        <field name="alias"/>
                                        <field name="entity_type"/>
                                    </group>
                                </form>
                            </field>
                        </form>
                    </field>

                    <!-- Messages -->
                    <separator string="Messages"/>
                    <field name="response_ids" mode="tree">
                        <tree editable="bottom">
                            <field name="name"/>
                        </tree>
                        <form>
                            <field name="name"/>
                        </form>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dialog_intent_tree" model="ir.ui.view">
        <field name="name">dialog.intent.tree</field>
        <field name="model">dialog.intent</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="dfid"/>
            </tree>
        </field>
    </record>

    <!-- Window action -->
    <record id="dialog_intent_action" model="ir.actions.act_window">
        <field name="name">Intents</field>
        <field name="res_model">dialog.intent</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="dialog_intent_tree"/>
    </record>

    <!-- Server action -->
    <record id="dialog_intent_action_server" model="ir.actions.server">
        <field name="name">Get intents</field>
        <field name="model_id" ref="chatbot.model_dialog_intent"/>
        <field name="state">code</field>
        <field name="code">
            model.get_list_df_intents()
        </field>
        <field name="binding_model_id" ref="chatbot.model_dialog_intent"/>
    </record>
</odoo>
