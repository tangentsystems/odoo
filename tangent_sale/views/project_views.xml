<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="view_project_view_task_form2_inherit_tangent" model="ir.ui.view">
      <field name="name">project_view_task_form2_inherit_tangent</field>
      <field name="model">project.task</field>
      <field name="inherit_id" ref="project.view_task_form2"/>
      <field name="arch" type="xml">
	<xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='user_id']" position="after">
	  <field name="overwrite_subtask_implied" invisible="1"/>
	  <field name="delivered_date"/>
	  <field name="invoice_id" attrs="{'invisible': ['|', ('delivered_date', '=', False), ('sale_line_id', '=', False)]}" readonly="1"/>
	</xpath>
      </field>
    </record>
  </data>
</odoo>
